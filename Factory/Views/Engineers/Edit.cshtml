@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit</h2>

<h4>Edit this engineer's info: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Name")
  @Html.EditorFor(model => model.EngineerName)

  @Html.Label("Contact Info")
  @Html.EditorFor(model => model.ContactInfo)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>